@model List<RetornoCotacao>

   

        
            <table  class="table table-bordered table-striped mb-0" id="tabelaCotacao" width="100%">
                <thead>
                    <tr>
                        <th>Casa de Câmbio</th>
                        <th>Cotação</th>
                        <th>Hora da Solicitação</th>
                    </tr>
                </thead>
                <tbody>
                    @{if (!(Model.Count == 0))
                        {
                            var maxv = @Model.Max(x => x.price);
                            foreach (var item in Model)
                            {
                                
                                if (item.price == maxv)
                                {
                                        <tr class="max">
                                            <td>
                                                @item.name
                                            </td>
                                            <td>
                                                @item.price
                                            </td>
                                            <td>
                                               @DateTime.UnixEpoch.AddMilliseconds((double)@item.time * 1000).ToLocalTime()
                                            </td>
                                        </tr>
                                }

                                else
                                {
                                    <tr>
                                        <td>
                                            @item.name
                                        </td>
                                        <td>
                                            @item.price
                                        </td>
                                        <td>
                                            @DateTime.UnixEpoch.AddMilliseconds((double)@item.time * 1000).ToLocalTime()
                                        </td>
                                    </tr>
                                    }
                                }
                            }
                      }
                </tbody>
            </table>
       